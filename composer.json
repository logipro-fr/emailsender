{
    "name": "logipro/emailsender",
    "type": "app",
    "description": "start a new PHP project with a simple base structure",
    "keywords": ["php", "DDT"],
    "homepage": "https://github.com/logipro-fr/emailsender",
    "license": "Copyrighted",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Mathis Tallaron",
            "email": "mathis.tallaron@logipro.com",
            "homepage": "https://fr.linkedin.com/in/mathis-tallaron-mmi",
            "role": "Internship"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/mailer": "^7.0",
        "symfony/brevo-mailer": "^7.0",
        "symfony/http-client": "^7.0",
        "getbrevo/brevo-php": "^2.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/runtime": "^7.1",
        "symfony/routing": "^7.1",
        "symfony/browser-kit": "^7.1",
        "symfony/orm-pack": "^2.4",
        "symfony/console": "^7.1",
        "symfony/http-foundation": "^7.1",
        "symfony/dotenv": "^7.1",
        "guzzlehttp/guzzle": "^7.8",
        "phpfastcache/phpfastcache": "^9.2"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.28",
        "phpstan/phpdoc-parser": "^1.28",
        "phpstan/phpstan": "1.10",
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "3.*",
        "behat/behat": "^3.14"
    },
    "autoload": {
        "psr-4" : {
            "EmailSender\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "EmailSender\\Tests\\" : "tests/unit",
            "EmailSender\\Integration\\" : "tests/integration"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "symfony/runtime": true
        }
    },

    "extra": {
        "runtime": {
            "dotenv_path": "src/Infrastructure/Shared/Symfony/.env"
        }
    }
}
